<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".SettingsActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/settings"
            app:titleTextColor="?attr/colorOnSurface"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
            app:navigationIconTint="?attr/colorOnSurface" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Settings Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- API KEY Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="API KEY"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/api_key_label"
                        app:boxBackgroundMode="none"
                        app:endIconMode="password_toggle"
                        app:endIconTint="?attr/colorPrimary"
                        app:hintTextColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/apiKeyInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnSurface"
                            android:inputType="textPassword"
                            android:background="@null" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/testConnectionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:text="@string/test_connection"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp"
                        android:backgroundTint="?attr/colorSurfaceVariant"
                        app:cornerRadius="21dp"
                        app:strokeColor="?attr/colorPrimary"
                        app:strokeWidth="1dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Source Citation Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/source_citation"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/source_citation_desc"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/sourceEnabledSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/source_citation"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- GENERATION PILLS Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pills_section"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header with Add Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Preset Pills"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="15sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/addPillButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/add_pill"
                            android:textSize="12sp"
                            android:backgroundTint="?attr/colorPrimary"
                            android:textColor="?attr/colorOnPrimary"
                            app:cornerRadius="18dp"
                            app:icon="@android:drawable/ic_input_add"
                            app:iconSize="16dp"
                            app:iconTint="?attr/colorOnPrimary"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                    <!-- Pills List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/pillsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <!-- Empty State -->
                    <TextView
                        android:id="@+id/pillsEmptyText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="@string/pills_empty"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="13sp"
                        android:visibility="visible" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- APPEARANCE Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theme_section"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_label"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"
                        android:layout_marginBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/themeRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/themeSystem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/theme_system"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp"
                            app:buttonTint="?attr/colorPrimary"
                            android:checked="true"
                            android:paddingVertical="8dp" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/themeLight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/theme_light"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp"
                            app:buttonTint="?attr/colorPrimary"
                            android:paddingVertical="8dp" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/themeDark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/theme_dark"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp"
                            app:buttonTint="?attr/colorPrimary"
                            android:paddingVertical="8dp" />

                    </RadioGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- POST CUSTOMIZATION Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POST CUSTOMIZATION"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Post Tone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tone_label"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="15sp" />

                        <RadioGroup
                            android:id="@+id/toneRadioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/toneFormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Formal"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="13sp"
                                app:buttonTint="?attr/colorPrimary"
                                android:checked="true"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/toneCasual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Casual"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="13sp"
                                app:buttonTint="?attr/colorPrimary" />

                        </RadioGroup>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutline" />

                    <!-- Default Hashtags -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/hashtags_label"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="15sp" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/enableHashtagsSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                app:thumbTint="?android:attr/colorBackground"
                                app:trackTint="?attr/colorPrimary"
                                app:trackDecorationTint="?attr/colorSurfaceVariant" />

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hashtags_hint"
                            app:boxBackgroundMode="none"
                            app:hintTextColor="?attr/colorOnSurfaceVariant">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/hashtagsInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="?attr/colorPrimary"
                                android:textSize="14sp"
                                android:inputType="text"
                                android:text="#BolaSepak #Football"
                                android:background="@null" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- ADVANCED SETTINGS Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advanced_settings"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/model_label"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="15sp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/modelDropdownLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxStrokeColor="?attr/colorPrimary">

                        <AutoCompleteTextView
                            android:id="@+id/modelDropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!--USAGE Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USAGE"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Total Tokens Header with Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/totalTokensValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_tokens_label"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Token Breakdown Visual Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/token_breakdown"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <!-- Stacked Bar Container -->
                        <LinearLayout
                            android:id="@+id/tokenBarContainer"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:orientation="horizontal"
                            android:clipChildren="false"
                            android:clipToPadding="false">

                            <!-- Prompt Tokens Bar (Blue with left rounded) -->
                            <View
                                android:id="@+id/promptTokensBar"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/token_bar_prompt" />

                            <!-- Response Tokens Bar (Green with right rounded) -->
                            <View
                                android:id="@+id/responseTokensBar"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/token_bar_response" />

                        </LinearLayout>

                        <!-- Legend -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <!-- Prompt Legend -->
                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#4285F4" />

                            <TextView
                                android:id="@+id/promptTokensValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Prompt: 0"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="11sp"
                                android:layout_marginStart="6dp" />

                            <!-- Response Legend -->
                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="#34A853" />

                            <TextView
                                android:id="@+id/responseTokensValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Response: 0"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="11sp"
                                android:layout_marginStart="6dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutline"
                        android:alpha="0.3"
                        android:layout_marginBottom="16dp" />

                    <!-- Requests Stats -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Successful Requests -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/successfulRequestsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#34A853"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/successful_requests"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="11sp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:background="?attr/colorOutline"
                            android:alpha="0.3" />

                        <!-- Failed Requests -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/failedRequestsValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#EA4335"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/failed_requests"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="11sp"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/resetStatsButton"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:text="@string/reset_stats"
                        android:textSize="12sp"
                        style="@style/Widget.Material3.Button.TonalButton"
                        app:cornerRadius="21dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!--GENERAL Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENERAL"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_description"
