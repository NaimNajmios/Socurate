<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:paddingBottom="24dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_sheet_handle" />

    <!-- Title Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/share_to_oreamnos"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/cancel_edit"
            android:tint="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:animateLayoutChanges="true">

            <!-- Collapsible Input Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/inputCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorSurfaceVariant"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Header Row (always visible) -->
                    <LinearLayout
                        android:id="@+id/inputHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Input"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/inputCharCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 chars"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp" />

                        <ImageView
                            android:id="@+id/expandArrow"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/arrow_up_float"
                            android:rotation="180"
                            android:tint="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                    <!-- Expandable Content -->
                    <TextView
                        android:id="@+id/sharedText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        android:maxLines="8"
                        android:ellipsize="end" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tone Quick Toggle -->
            <LinearLayout
                android:id="@+id/toneToggleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tone_quick_toggle"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"
                    android:layout_marginEnd="12dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/toneChipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chip_formal"
                        android:textColor="@color/chip_text_color_selector"
                        android:checked="true"
                        style="@style/Widget.Material3.Chip.Filter"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="?attr/colorOutline"
                        app:chipStrokeWidth="1dp"
                        app:checkedIconVisible="false" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCasual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chip_casual"
                        android:textColor="@color/chip_text_color_selector"
                        style="@style/Widget.Material3.Chip.Filter"
                        app:chipBackgroundColor="@color/chip_background_selector"
                        app:chipStrokeColor="?attr/colorOutline"
                        app:chipStrokeWidth="1dp"
                        app:checkedIconVisible="false" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

            <!-- Progress Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/progressCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="12dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/progressStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/progress_extracting"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:progress="0"
                        android:max="100"
                        app:trackThickness="6dp"
                        app:trackCornerRadius="3dp"
                        app:indicatorColor="?attr/colorPrimary"
                        app:trackColor="?attr/colorSurfaceVariant" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Generated Draft Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resultCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header with Sparkle Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_sparkle"
                            android:contentDescription="@string/generated_draft"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/generated_draft"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/editedIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/edited_indicator"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="11sp"
                            android:visibility="gone"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/edit_button"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="12sp"
                            android:minWidth="0dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:backgroundTint="?attr/colorPrimary"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:cornerRadius="18dp"
                            app:icon="@android:drawable/ic_menu_edit"
                            app:iconSize="16dp"
                            app:iconTint="?attr/colorOnPrimary"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                    <!-- Output Text -->
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="200dp"
                        android:nestedScrollingEnabled="true"
                        android:fillViewport="true"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/outputText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp"
                            android:minLines="3"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences"
                            android:background="@null"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                    </ScrollView>

                    <!-- Word Count -->
                    <TextView
                        android:id="@+id/outputWordCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="0 words"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        android:layout_marginBottom="12dp" />

                    <!-- Output Chips -->
                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:singleLine="false"
                        app:chipSpacingVertical="4dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/includeTitleCheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/include_title"
                            android:textColor="@color/chip_text_color_selector"
                            android:checked="true"
                            style="@style/Widget.Material3.Chip.Filter"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="?attr/colorOutline"
                            app:chipStrokeWidth="1dp"
                            app:checkedIconVisible="true"
                            app:checkedIconTint="?attr/colorOnPrimary" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/includeHashtagsCheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/include_hashtags"
                            android:textColor="@color/chip_text_color_selector"
                            android:checked="true"
                            style="@style/Widget.Material3.Chip.Filter"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="?attr/colorOutline"
                            app:chipStrokeWidth="1dp"
                            app:checkedIconVisible="true"
                            app:checkedIconTint="?attr/colorOnPrimary" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/includeSourceCheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/include_source"
                            android:textColor="@color/chip_text_color_selector"
                            android:checked="true"
                            style="@style/Widget.Material3.Chip.Filter"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="?attr/colorOutline"
                            app:chipStrokeWidth="1dp"
                            app:checkedIconVisible="true"
                            app:checkedIconTint="?attr/colorOnPrimary" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/copyButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="@string/copy_button"
                            android:textColor="?attr/colorOnPrimary"
                            android:textStyle="bold"
                            android:backgroundTint="?attr/colorPrimary"
                            app:cornerRadius="24dp"
                            app:icon="@android:drawable/ic_menu_save"
                            app:iconTint="?attr/colorOnPrimary"
                            style="@style/Widget.Material3.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/shareButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="12dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:backgroundTint="?attr/colorSurfaceVariant"
                            app:cornerRadius="24dp"
                            app:icon="@android:drawable/ic_menu_share"
                            app:iconTint="?attr/colorOnSurface"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Background Processing & Continue Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Background Generate Button (visible before generation) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backgroundButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/generate_background"
                    app:icon="@android:drawable/ic_popup_sync"
                    style="@style/Widget.Material3.Button.TextButton" />

                <!-- Continue in Main App Button (visible after generation) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continueButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="@string/continue_in_app"
                    style="@style/Widget.Material3.Button.TextButton" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
