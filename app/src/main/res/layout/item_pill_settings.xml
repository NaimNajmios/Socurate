<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pillCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Pill Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Name Row with Active Chip -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/pillName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pill Name"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/activeChip"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginStart="8dp"
                    android:text="Active"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="10sp"
                    android:visibility="gone"
                    app:chipBackgroundColor="?attr/colorPrimary"
                    app:chipMinHeight="24dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStrokeWidth="0dp"
                    app:ensureMinTouchTargetSize="false" />

            </LinearLayout>

            <!-- Summary Row with Tone Chip -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.chip.Chip
                    android:id="@+id/toneChip"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="Formal"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="11sp"
                    app:chipBackgroundColor="?attr/colorSurfaceVariant"
                    app:chipMinHeight="24dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStrokeWidth="0dp"
                    app:ensureMinTouchTargetSize="false" />

                <TextView
                    android:id="@+id/pillSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Options summary"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <ImageButton
            android:id="@+id/editPillButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit pill"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="?attr/colorOnSurfaceVariant" />

        <ImageButton
            android:id="@+id/deletePillButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete pill"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="?attr/colorError" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
