<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Modern Dark Theme - Always Dark -->
    <style name="Theme.Oreamnos" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors - Neon Green -->
        <item name="colorPrimary">@color/neon_green</item>
        <item name="colorOnPrimary">@color/pure_black</item>
        <item name="colorPrimaryContainer">@color/neon_green_dark</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/neon_green_light</item>
        <item name="colorOnSecondary">@color/pure_black</item>
        <item name="colorSecondaryContainer">@color/dark_surface</item>
        <item name="colorOnSecondaryContainer">@color/text_secondary</item>
        
        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/neon_green</item>
        <item name="colorOnTertiary">@color/pure_black</item>
        <item name="colorTertiaryContainer">@color/dark_surface_variant</item>
        <item name="colorOnTertiaryContainer">@color/text_primary</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/destructive_red</item>
        <item name="colorOnError">@color/text_primary</item>
        <item name="colorErrorContainer">@color/dark_surface_variant</item>
        <item name="colorOnErrorContainer">@color/destructive_red</item>
        
        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/pure_black</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/dark_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Outline -->
        <item name="colorOutline">@color/md_theme_dark_outline</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/pure_black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/pure_black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>
    </style>
</resources>
