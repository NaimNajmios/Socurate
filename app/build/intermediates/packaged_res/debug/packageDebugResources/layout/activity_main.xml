<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".MainActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/app_name"
            app:titleTextColor="?attr/colorOnBackground"
            app:menu="@menu/menu_main" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:animateLayoutChanges="true">

            <!-- Input Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Input Header with Reset Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Input"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/clearInputButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/clear_input"
                            android:tint="?attr/colorOnSurfaceVariant"
                            android:padding="4dp" />

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/input_hint"
                        app:boxBackgroundMode="none"
                        app:hintTextColor="?attr/colorOnSurfaceVariant">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minLines="5"
                            android:maxLines="10"
                            android:gravity="top|start"
                            android:textColor="?attr/colorOnSurface"
                            android:textColorHint="?attr/colorOnSurfaceVariant"
                            android:inputType="textMultiLine|textCapSentences"
                            android:background="@null" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Placeholder Illustration (shown when no output) -->
            <LinearLayout
                android:id="@+id/placeholderView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:layout_marginBottom="20dp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_stadium"
                    android:contentDescription="@string/placeholder_title"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_title"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/placeholder_subtitle"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Skeleton Loading (shown while processing) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/skeletonCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Loading Text -->
                    <TextView
                        android:id="@+id/skeletonLoadingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/generating_post"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Skeleton Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:background="@drawable/skeleton_item" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="80dp"
                            android:layout_height="36dp"
                            android:background="@drawable/skeleton_item" />

                    </LinearLayout>

                    <!-- Skeleton Lines -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/skeleton_item" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/skeleton_item" />

                    <!-- Skeleton Line 3 (80% width) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:layout_weight="0.8"
                            android:background="@drawable/skeleton_item" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="0.2" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/skeleton_item" />

                    <!-- Skeleton Line 5 (60% width) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:layout_weight="0.6"
                            android:background="@drawable/skeleton_item" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="0.4" />

                    </LinearLayout>

                    <!-- Skeleton Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:background="@drawable/skeleton_item" />

                        <View
                            android:layout_width="12dp"
                            android:layout_height="1dp" />

                        <View
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/skeleton_item" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Generated Draft Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/outputCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header with Sparkle Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_sparkle"
                            android:contentDescription="@string/generated_draft"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/generated_draft"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/editedIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/edited_indicator"
                            android:textColor="?attr/colorPrimary"
                            android:textSize="11sp"
                            android:visibility="gone"
                            android:layout_marginEnd="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/editButton"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/edit_button"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="12sp"
                            android:minWidth="0dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:backgroundTint="?attr/colorPrimary"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:cornerRadius="18dp"
                            app:icon="@android:drawable/ic_menu_edit"
                            app:iconSize="16dp"
                            app:iconTint="?attr/colorOnPrimary"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                    <!-- Output Text with Scrollable Container -->
                    <ScrollView
                        android:id="@+id/outputScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="300dp"
                        android:nestedScrollingEnabled="true"
                        android:fillViewport="true"
                        android:scrollbars="vertical"
                        android:fadeScrollbars="false"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/outputText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/output_placeholder"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="15sp"
                            android:lineSpacingExtra="4dp"
                            android:minLines="4"
                            android:gravity="top|start"
                            android:inputType="textMultiLine|textCapSentences"
                            android:background="@null"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                    </ScrollView>

                    <!-- Hashtag Checkbox -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/includeHashtagsCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/include_hashtags"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:checked="true"
                        app:buttonTint="?attr/colorPrimary"
                        android:layout_marginBottom="8dp" />
                    
                    <!-- Source Checkbox -->
                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/includeSourceCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/include_source"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:checked="true"
                        app:buttonTint="?attr/colorPrimary"
                        android:layout_marginBottom="16dp" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Copy Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/copyButton"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="@string/copy_button"
                            android:textColor="?attr/colorOnPrimary"
                            android:textStyle="bold"
                            android:backgroundTint="?attr/colorPrimary"
                            app:cornerRadius="24dp"
                            app:icon="@android:drawable/ic_menu_save"
                            app:iconTint="?attr/colorOnPrimary"
                            style="@style/Widget.Material3.Button" />

                        <!-- Share Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/shareButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="12dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:backgroundTint="?attr/colorSurfaceVariant"
                            app:cornerRadius="24dp"
                            app:icon="@android:drawable/ic_menu_share"
                            app:iconTint="?attr/colorOnSurface"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Refinement Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/refinementCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="16dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/refine_section"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkRephrase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/refine_rephrase"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkRecheckFlow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/refine_recheck_flow"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkRecheckWording"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/refine_recheck_wording"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkFormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/refine_formal"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkConversational"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/refine_conversational"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkShortenDetailed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/refine_shorten_detailed"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/regenerateButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/regenerate_button"
                        app:icon="@android:drawable/ic_menu_rotate"
                        style="@style/Widget.Material3.Button" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB for Generate -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/generateFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="@string/generate_button"
        android:textColor="?attr/colorOnPrimary"
        android:textStyle="bold"
        app:backgroundTint="?attr/colorPrimary"
        app:icon="@android:drawable/ic_menu_send"
        app:iconTint="?attr/colorOnPrimary" />

    <!-- Progress Overlay -->
    <FrameLayout
        android:id="@+id/progressOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:background="@drawable/dark_card_bg"
            android:elevation="8dp">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="?attr/colorPrimary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/processing"
                android:textColor="?attr/colorOnSurface"
                android:textSize="15sp" />

        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
