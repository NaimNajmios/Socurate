<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareReceiverActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/share_to_oreamnos"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Shared Content Preview -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/previewCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shared Content"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/sharedText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:maxLines="3"
                        android:ellipsize="end" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Result Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/resultCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/output_label"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/outputText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textIsSelectable="true"
                        android:minLines="4"
                        android:layout_marginBottom="16dp" />

                    <!-- Action Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/copyButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/copy_button"
                            android:layout_marginEnd="8dp"
                            app:icon="@android:drawable/ic_menu_save"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/shareButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/share_button"
                            app:icon="@android:drawable/ic_menu_share"
                            style="@style/Widget.Material3.Button" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Open in Main App Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/openMainAppButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="@string/open_in_app"
                style="@style/Widget.Material3.Button.TextButton" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Skeleton Loading Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/skeletonCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardElevation="0dp"
        app:cardCornerRadius="16dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Loading Text -->
            <TextView
                android:id="@+id/skeletonLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/generating_post"
                android:textColor="?attr/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Skeleton Lines -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/skeleton_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/skeleton_item" />

            <View
                android:layout_width="200dp"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/skeleton_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@drawable/skeleton_item" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
